  <!-- HEADER -->
  <div class="bg-primary p-4">
    <div class="d-flex justify-content-end">
      <a href="/main" type="button" class="btn btn-light shadow-sm">Exit Topic</a>
    </div>
    <h1 class="display-4 text-center font-weight-bold text-white pb-2">CampLit</h1>
  </div>
  <!-- MAIN -->
  <main class="container pt-5">
    <div class="card" id="flip-card">
      <div class="flip-card">
        <div class="flip-card-inner d-flex justify-content-center">

          <!--****** CARD FRONT (TERM) ***** -->
          <div class="flip-card-front">
            <div class="card-body bg-white border shadow text-center p-5">
              <!-- TERM GOES HERE-->
              <h5 class="text-muted">Topic: {{card.topic}}</h5>
              <h4 class="pt-2">{{card.term}}</h4>
              <button class="btn btn-primary mt-3 shadow-sm btn-flip" id="btnflip1">See Definition</button>
            </div>

            <div class="d-flex justify-content-between mt-4">
              <button type="button" class="btn btn-warning shadow-sm back">Back</button>
              <button type="button" class="btn btn-warning shadow-sm next">Next</button>
            </div>

          </div>

          <!-- ****** CARD BACK (DEFINITION) ***** -->
          <div class="flip-card-back">
            <div class="card-body bg-white border shadow text-center p-5">
              <!--DEFINITION GOES HERE-->
              <h5 class="text-muted">Topic: {{card.topic}}</h5>
              <h4 class="pt-2">{{card.definition}}</h4>
              <button class="btn btn-primary mt-3 shadow-sm btn-flip" id="btnflip2">See Term</button>
            </div>

            <div class="d-flex justify-content-between mt-4">
              <button type="button" class="btn btn-warning shadow-sm back">Back</button>
              <button type="button" class="btn btn-warning shadow-sm next">Next</button>
            </div>
            
          </div>
        </div>
      </div>
    </div>
    
  </main>