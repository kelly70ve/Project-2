<!-- HEADER -->
  <div class="bg-primary p-4">
    <div class="d-flex justify-content-end">
      <button type="button" class="btn btn-light shadow-sm">Create New Topic +</button>
    </div>
    <h1 class="display-4 text-center font-weight-bold text-white pb-2">CampLit</h1>
  </div>
  <!-- MAIN/CARD TOPICS -->
  <main class="container pt-4">
    <div class="row row-cols-1 row-cols-md-3">

      {{#each topic}}
      <div class="col mb-4">
        <div class="card shadow-sm">
          <button type="button" class="close text-right p-2" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
            <h5 class="card-title text-center pb-4">{{this.subject}}</h5>
        </div>
      </div>
      {{/each}}
      
    </div>
  </main>